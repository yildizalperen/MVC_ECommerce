@model ECommerce.Models.Entities.Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid pt-2">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header bg-dark mb-3">
                        <h3 class="card-title">Delete @Model.ProductName</h3>
                    </div>

                    <form method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Product Name</label>
                                <p class="secondary">@Model.ProductName</p>
                            </div>

                            <div class="form-group">
                                <label>Unit Price</label>
                                <p class="secondary">@Model.UnitPrice</p>
                            </div>

                            <div class="form-group">
                                <label>Units In Stock</label>
                                <p class="secondary">@Model.UnitsInStock</p>
                            </div>

                            <div class="form-group">
                                <label>Category ID</label>
                                <p class="secondary">@Model.CategoryId</p>
                            </div>

                            <div class="form-group">
                                <label>Supplier ID</label>
                                <p class="secondary">@Model.SupplierId</p>
                            </div>

                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-dark">Delete</button>
                        </div>
                    </form>

                </div>
                <div>
                </div>
            </div>
        </div>
    </div>
</section>
