@model ECommerce.Models.Entities.Supplier
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid pt-2">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header bg-dark mb-3">
                        <h3 class="card-title">Update @Model.CompanyName</h3>
                    </div>

                    <form method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label>New Company Name</label>
                                <input type="text" class="form-control" asp-for="@Model.CompanyName" placeholder="Enter New Company Name">
                            </div>

                            <div class="form-group">
                                <label>New Contact Name</label>
                                <input type="text" class="form-control" asp-for="@Model.ContactName" placeholder="Enter New Contact Name">
                            </div>

                            <div class="form-group">
                                <label>New Address</label>
                                <input type="text" class="form-control" asp-for="@Model.Address" placeholder="Enter New Address">
                            </div>

                            <div class="form-group">
                                <label>New Phone Number</label>
                                <input type="number" class="form-control" asp-for="@Model.PhoneNumber" placeholder="Enter New Phone Number">
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-dark">Update</button>
                        </div>
                    </form>

                </div>
                <div>
                </div>
            </div>
        </div>
    </div>
</section>

