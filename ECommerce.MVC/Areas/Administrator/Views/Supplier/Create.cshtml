@model SupplierViewModelUser
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid pt-2">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header bg-dark mb-3">
                        <h3 class="card-title">Create New Supplier</h3>
                    </div>

                    <form method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Company Name</label>
                                <input type="text" class="form-control" asp-for="@Model.CompanyName" placeholder="Enter Company Name">
                            </div>
                            <div class="form-group">
                                <label>Contact Name</label>
                                <input type="text" class="form-control" asp-for="@Model.ContactName" placeholder="Enter Contact Name">
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <input type="text" class="form-control" asp-for="@Model.Address" placeholder="Enter Company Adress">
                            </div>
                            <div class="form-group">
                                <label>PhoneNumber</label>
                                <input type="number" class="form-control" asp-for="@Model.PhoneNumber" placeholder="Enter Phone Number">
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-dark">Create</button>
                        </div>
                    </form>

                </div>
                <div>
                </div>
            </div>
        </div>
    </div>
</section>
