@model ECommerce.Models.Entities.Product
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid pt-2">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header bg-dark mb-3">
                        <h3 class="card-title">Update @Model.ProductName</h3>
                    </div>

                    <form method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label>New Product Name</label>
                                <input type="text" class="form-control" asp-for="@Model.ProductName" placeholder="Enter New Product Name">
                            </div>

                            <div class="form-group">
                                <label>New Unit Price</label>
                                <input type="number" class="form-control" asp-for="@Model.UnitPrice" placeholder="Enter New Unit Price">
                            </div>

                            <div class="form-group">
                                <label>New Units In Stock</label>
                                <input type="number" class="form-control" asp-for="@Model.UnitsInStock" placeholder="Enter New Units In Stock">
                            </div>

                            <div class="form-group">
                                <label>New Image Path</label>
                                <input type="text" class="form-control" asp-for="@Model.ImagePath" placeholder="Enter New Image Path">
                            </div>
                            <div class="form-group">
                                <label>Aktif </label>
                                <input type="checkbox" class="checkbox" asp-for="@Model.IsActive">
                            </div>
                            <input hidden type="text" class="form-control" asp-for="@Model.CategoryId">
                            <input hidden type="text" class="form-control" asp-for="@Model.SupplierId">
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-dark">Update</button>
                        </div>
                    </form>

                </div>
                <div>
                </div>
            </div>
        </div>
    </div>
</section>

